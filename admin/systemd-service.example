[Unit]
Description=NIHOM Admin Panel
After=network.target

[Service]
Type=notify
User=www-data
Group=www-data
WorkingDirectory=/var/www/nihom/admin
Environment="PATH=/var/www/nihom/admin/venv/bin"
EnvironmentFile=/var/www/nihom/admin/.env
ExecStart=/var/www/nihom/admin/venv/bin/gunicorn app_prod:app \
    --workers 4 \
    --worker-class uvicorn.workers.UvicornWorker \
    --bind 0.0.0.0:8000 \
    --access-logfile /var/www/nihom/admin/logs/access.log \
    --error-logfile /var/www/nihom/admin/logs/error.log \
    --log-level info
ExecReload=/bin/kill -s HUP $MAINPID
KillMode=mixed
TimeoutStopSec=5
PrivateTmp=true

[Install]
WantedBy=multi-user.target
